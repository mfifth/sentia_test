<h1>Imported Records</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link "name" %></th>
      <th><%= sort_link "record_date", "date" %></th>
      <th><%= sort_link "record_id", "number" %></th>
      <th><%= "description" %></th>
    </tr>
  </thead>
  <tbody>
    <% @csv_records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.record_date.strftime("%B %e, %Y") %></td>
        <td><%= record.record_id %></td>
        <td><%= record.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
